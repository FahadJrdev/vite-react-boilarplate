# EditorConfig helps developers define and maintain consistent coding styles across different editors and IDEs

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Exclude directories from default settings
[**/node_modules/**]
[**/build/**]
exclude_patterns = node_modules/, build/

# JavaScript and TypeScript files
[*.js]
[*.jsx]
[*.ts]
[*.tsx]
indent_style = space
indent_size = 2

# CSS, SCSS, and LESS files
[*.css]
[*.scss]
[*.less]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
